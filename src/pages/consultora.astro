---
// Layouts y Componentes Globales
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import PageHeader from "../components/PageHeader.astro";
import ContactForm from "../components/ContactForm.astro";

// Componentes Modulares de la Página
import ServicesSection from "../components/consultora/ServicesSection.astro";
import PricingSection from "../components/consultora/PricingSection.astro";

// Tipos de Datos
import type { Service } from "../types/service";
import type { Plan } from "../types/plan";

// --- DATOS PARA LA PÁGINA ---

// 1. Navegación
const navLinks = [
  { text: "Inicio", href: "/" },
  { text: "Panadería", href: "/panaderia" },
  { text: "Microfinanciera", href: "/microfinanzas" },
  { text: "Consultora TI", href: "/consultora", active: true },
];

// 2. Servicios
const services: Service[] = [
  {
    title: "Desarrollo Web",
    description:
      "Creamos sitios y aplicaciones web a medida, desde landing pages hasta sistemas complejos con React, Node.js y bases de datos escalables.",
    tags: ["Front-end", "Back-end", "Full-Stack"],
    icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />',
  },
  {
    title: "Aplicaciones Móviles",
    description:
      "Diseñamos y desarrollamos apps nativas para Android y iOS, enfocadas en una gran experiencia de usuario y un rendimiento óptimo.",
    tags: ["Kotlin", "Swift", "Compose"],
    icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />',
  },
  {
    title: "BI & Analytics",
    description:
      "Transformamos tus datos en insights valiosos con dashboards interactivos, modelos de datos y reportes automatizados.",
    tags: ["Power BI", "Tableau", "SQL"],
    icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />',
  },
  {
    title: "Cloud & DevOps",
    description:
      "Optimizamos tu infraestructura en la nube y automatizamos tus procesos de despliegue para mayor eficiencia y escalabilidad.",
    tags: ["AWS", "Azure", "Docker", "CI/CD"],
    icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z" />',
  },
];

// 3. Planes de Precios
const plans: Plan[] = [
  {
    name: "Starter",
    price: "S/ 1,800",
    priceDetails: "pago único",
    features: [
      "Landing Page Profesional",
      "Diseño Adaptable",
      "Formulario de Contacto",
      "30 días de soporte",
    ],
    cta: "Empezar Ahora",
  },
  {
    name: "Business",
    price: "S/ 4,500",
    priceDetails: "pago único",
    features: [
      "Sitio Web Corporativo (5 pág.)",
      "Integración con CMS",
      "Optimización SEO básica",
      "60 días de soporte prioritario",
    ],
    cta: "Elegir Business",
    featured: true,
  },
  {
    name: "Enterprise",
    price: "A Medida",
    priceDetails: "según requerimientos",
    features: [
      "Soluciones Complejas",
      "Integraciones Avanzadas",
      "Soporte y Mantenimiento Dedicado",
      "Consultoría Estratégica",
    ],
    cta: "Contáctanos",
  },
