// 4. Opciones del Formulario de Contacto
const contactOptions = [
  "Desarrollo Web",
  "Apps Móviles",
  "BI/Analytics",
  "Cloud/DevOps",
  "Plan Business",
  "Plan Enterprise",
];
---

<BaseLayout
  title="TechPartner | Consultoría y Desarrollo de Software"
  description="Soluciones tecnológicas a medida: desarrollo web, aplicaciones móviles, Business Intelligence y Cloud/DevOps para impulsar tu negocio."
>
  <Navbar brand="" links={navLinks} />

  <PageHeader
    title="Transformamos Ideas en Soluciones Digitales"
    lead="Somos tu socio tecnológico estratégico para el desarrollo de software a medida, desde aplicaciones web y móviles hasta inteligencia de negocios y optimización en la nube."
    gradientClass="bg-gradient-to-tr from-blue-700 via-blue-800 to-gray-900 text-white"
  />

  <main>
    <ServicesSection services={services} />
    <PricingSection plans={plans} />
    <ContactForm
      title="¿Listo para empezar tu proyecto?"
      buttonText="Enviar Consulta"
      buttonColorClass="bg-blue-600 text-white hover:bg-blue-700"
      selectOptions={contactOptions}
    />
  </main>

  <Footer
    bgColor="bg-gray-900"
    brandName="TechPartner"
    brandDescription="Soluciones tecnológicas a medida: desarrollo web, aplicaciones móviles, Business Intelligence y Cloud/DevOps para impulsar tu negocio."
    navLinks={navLinks}
    email="contact@techpartner.com"
    phone="+1 (234) 567-8901"
    socials={{
      twitter: "#",
      linkedin: "#",
    }}
    copyrightText="© 2025 TechPartner. Innovación y Desarrollo."
  />
</BaseLayout>

