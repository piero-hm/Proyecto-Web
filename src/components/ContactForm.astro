---
interface Props {
  title: string;
  buttonText: string;
  buttonColorClass: string; // e.g., 'bg-secondary-500'
  selectOptions?: string[];
}

const { title, buttonText, buttonColorClass, selectOptions } = Astro.props;
---

<section id="contacto" class="my-10 bg-white p-8 rounded-lg shadow-lg">
  <h2 class="text-2xl font-semibold mb-3">{title}</h2>
  <form class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div class="col-span-1">
      <label for="name" class="block text-sm font-medium text-gray-700">Nombre</label>
      <input type="text" id="name" class="mt-1 block w-full rounded-md border-gray-200 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50 placeholder-gray-500" required>
    </div>
    <div class="col-span-1">
      <label for="email" class="block text-sm font-medium text-gray-700">Correo</label>
      <input type="email" id="email" class="mt-1 block w-full rounded-md border-gray-200 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50 placeholder-gray-500" required>
    </div>
    {
      selectOptions && selectOptions.length > 0 && (
        <div class="col-span-full">
          <label for="interest" class="block text-sm font-medium text-gray-700">Inter√©s</label>
          <select id="interest" class="mt-1 block w-full rounded-md border-gray-200 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50 placeholder-gray-500">
            {selectOptions.map(option => <option>{option}</option>)}
          </select>
        </div>
      )
    }
    <div class="col-span-full">
      <label for="message" class="block text-sm font-medium text-gray-700">Mensaje</label>
      <textarea id="message" class="mt-1 block w-full rounded-md border-gray-200 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50 placeholder-gray-500" rows="3"></textarea>
    </div>
    <div class="col-span-full">
      <button type="submit" class={`py-2 px-4 rounded-md text-white font-semibold ${buttonColorClass} hover:opacity-90 transition duration-150 ease-in-out`}>
        {buttonText}
      </button>
    </div>
  </form>
</section>
