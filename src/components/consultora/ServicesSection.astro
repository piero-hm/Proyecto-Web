---
import type { Service } from '../../types/service';

interface Props {
  services: Service[];
}

const { services } = Astro.props;
---

<section id="servicios" class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-extrabold text-gray-900 tracking-tight">Nuestros Servicios</h2>
      <p class="mt-4 text-lg md:text-xl text-gray-600 max-w-3xl mx-auto">Soluciones tecnol√≥gicas integrales para potenciar tu negocio en el mundo digital.</p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {services.map((service) => (
        <div class="bg-white rounded-xl shadow-lg overflow-hidden transform hover:-translate-y-2 transition-transform duration-300 ease-in-out group">
          <div class="p-8 text-center">
            <div class="inline-block bg-blue-100 text-blue-600 rounded-full p-4 mb-6">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" set:html={service.icon} />
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">{service.title}</h3>
            <p class="text-gray-600 text-sm min-h-[5rem]">{service.description}</p>
          </div>
          <div class="px-6 pt-4 pb-6 bg-gray-50">
              {service.tags.map(tag => (
                <span class="inline-block bg-gray-200 text-gray-700 text-xs font-semibold mr-2 mb-2 px-3 py-1 rounded-full">{tag}</span>
              ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
