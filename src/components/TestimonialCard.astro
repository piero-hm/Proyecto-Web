---
interface Props {
  quote: string;
  author: string;
  image: string;
}

const { quote, author, image } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md p-6 text-center flex flex-col items-center">
  <img src={image} alt={author} class="w-24 h-24 rounded-full object-cover mb-4 border-4 border-green-500">
  <p class="text-gray-700 italic mb-4">"{quote}"</p>
  <p class="font-semibold text-green-700">- {author}</p>
</div>
